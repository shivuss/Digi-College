<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backimg"
    tools:context="com.example.shivu.staffstudent.replydetails">

    <EditText
        android:id="@+id/editText19"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:drawableRight="@drawable/queryidss"
        android:hint="Enter Query ID"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/editText20"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:drawableRight="@drawable/replyid"
        android:hint="Enter Reply ID"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/editText19"
        app:layout_constraintRight_toRightOf="@+id/editText19"
        app:layout_constraintTop_toBottomOf="@+id/editText19"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/editText21"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:drawableRight="@drawable/commentdetailss"
        android:hint="Enter Details"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/editText20"
        app:layout_constraintRight_toRightOf="@+id/editText20"
        app:layout_constraintTop_toBottomOf="@+id/editText20"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/editText22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:drawableRight="@drawable/fromss"
        android:hint="Reply BY"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="@+id/editText21"
        app:layout_constraintRight_toRightOf="@+id/editText21"
        app:layout_constraintTop_toBottomOf="@+id/editText21"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="57dp"
        android:layout_marginTop="47dp"
        android:onClick="send"
        android:text="CONFIRM"
        app:layout_constraintRight_toRightOf="@+id/editText22"
        app:layout_constraintTop_toBottomOf="@+id/editText22"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
</android.support.constraint.ConstraintLayout>
